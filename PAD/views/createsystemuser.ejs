                    <script>
                      function displayregionorticket(val){
                      if(val == "Ticket_Office_Data_Encoder")
                      {
                          var toffice = document.getElementById('ticketoffice');
                          var region = document.getElementById('regional');
                          toffice.style.display="block";
                          region.style.display="none";
                      }
                      else if(val == "Ticket_Office_Manager"){
                        var toffice = document.getElementById('ticketoffice');
                          var region = document.getElementById('regional');
                          toffice.style.display="block";
                          region.style.display="none";
                      }
                      else if(val == "Regional_Data_Encoder"){
                        var toffice = document.getElementById('ticketoffice');
                          var region = document.getElementById('regional');
                          toffice.style.display="none";
                          region.style.display="block";
                      }
                      else if(val == "Regional_Office_Manager"){
                        var toffice = document.getElementById('ticketoffice');
                          var region = document.getElementById('regional');
                          toffice.style.display="none";
                          region.style.display="block";
