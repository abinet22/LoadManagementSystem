        <div class="main-panel">
          <div class="content-wrapper">
            <div class="page-header">
              <h3 class="page-title">
                <span class="page-title-icon  text-white me-2">
                  <i class="mdi mdi-home" style="color: #45b649;"></i>
                </span> Dashboard/Add System Users
              </h3>
              <nav aria-label="breadcrumb">
                <ul class="breadcrumb">
                    <li class="breadcrumb-item active" aria-current="page">
                        <a href="/user/systemuserlist">
                          <span></span>System User List <i class="mdi  mdi-format-list-bulleted-type icon-sm text-primary align-middle"></i>
                  
                        </a>
                         </li>
                </ul>
              </nav>
            </div>

            <%- include ('./partials/messages') %>
            <div class="col-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <h4 class="card-title"><i class="mdi mdi-account-card-details" style="font-size:24px;color:#45b649"></i>Create System User Form</h4>
                    <p class="card-description"> Add New System User</p>
               
                    <form class="forms-sample" action="/user/addnewsystemuser" method="post">
                      <div class="form-group">
                        <label for="exampleInputName1">Officer Full Name</label>
                        <input type="text" class="form-control" id="fullname" name="fullname" placeholder="User Full Name">
                      </div>
                      <div class="form-group">
                        <label for="exampleSelectGender">User Roll</label>
                        <select class="form-control" id="userroll" name="userroll" onchange=" displayregionorticket(this.value);">
                          <option value="0">Please Select System User Roll</option>
                          <option value="Customer_Advisory_Head">Customer_Advisory_Head</option>
                          <option value="CRMD_Head">CRMD_Head</option>
                        
                          <option value="PAD_Head">PAD_Head</option>
                          <option value="Loan_Review_TeaM_Head">Loan_Review_TeaM_Head</option>
                        
                        </select>
                      </div>
                     
                      <div class="form-group">
                        <label for="exampleInputEmail3">Email </label>
                        <input type="text" class="form-control" id="email" name="email"  placeholder="User Email">
                      </div>
                      <div class="form-group">
                        <label for="exampleInputEmail3">Phone Number </label>
                        <input type="text" class="form-control" id="phonenumber" name="phonenumber"  placeholder="Phone Number">
                      </div>
                      <div class="form-group">
                        <label for="exampleInputPassword4">Password</label>
                        <input type="password" class="form-control" id="password" name="password" placeholder="Password">
                      </div>
                      <div class="form-group">
                        <label for="exampleInputPassword4">Retype_Password</label>
                        <input type="password" class="form-control" id="retypepassword" name="retypepassword" placeholder="Retype Password">
                      </div>
                   
                      <div class="col-md-4 offset-md-4">
                        <button type="submit" class="btn btn-gradient-primary mr-2 btn-block">Save</button>
                     
                      </div>
                    
                   
                    </form>
                  </div>
                </div>
              </div>
         
        
          </div>
